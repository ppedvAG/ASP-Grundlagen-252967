@model List<Customers>

<h2>Alle Kunden</h2>

<form asp-action="FilterCustomers">
	Land: <input type="text" name="country"/>
	<button type="submit" class="btn btn-primary">Filtern</button>
</form>

@*Aufgabe: Jede 5. Row färben*@
<table class="table table-hover table-sm">
	<thead>
		<tr>
			<th>ID</th>
			<th>Firmenname</th>
			<th>Ansprechperson</th>
			<th>Adresse</th>
			<th>Telefonnummer</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@{
			int counter = 0;
		}
		@foreach (Customers c in Model)
		{
			<tr class="@(counter % 5 == 0 ? "table-primary" : "")">
				<td class="align-middle">@c.CustomerId</td>
				<td class="align-middle">@c.CompanyName</td>
				<td class="align-middle">@c.ContactName</td>
				<td class="align-middle">@($"{c.Address} {c.City}, {c.PostalCode} {c.Country}")</td>
				<td class="align-middle">@c.Phone</td>
				<td class="align-middle">
					<a asp-route-id="@c.CustomerId" asp-action="ShowOrdersForCustomer">
						<button type="submit" class="btn btn-primary">Bestellungen anzeigen</button>
					</a>
				</td>
			</tr>
			counter++;
		}
	</tbody>
</table>